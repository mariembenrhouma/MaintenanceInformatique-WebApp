        <th>
            Libellé
        </th>
        <th>
            Type
        </th>
        <th>
            Piéces demandées
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.Message)
    {
        <tr>
            <td>
                @item.Numéro)
            </td>
            <td>
                @item.Référence
            </td>
            <td>
                @item.Libellé
            </td>
            <td>
                @item.Type
            </td>
            <td>
                <div class="hi">
                    @Html.DropDownList("list", ViewBag.Pieces as SelectList, "Choix d'une piece")
                    <br />
                    <br />
                    @Html.ActionLink("Ajout", "Ajou", "mainten") |
                    @*<button class="btn btn-primary btn-sm" data-target="#loginModal" data-toggle="modal">Ajout</button>*@
                </div>
            </td>

        </tr>
    }

</table>

