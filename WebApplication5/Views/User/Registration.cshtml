                                        @class = "contact-input",
                                        @required = ""
                                    }
                                })
                            </div>
                            <div class="input-field">
                                @Html.EditorFor(model => model.password, new
                           {
                               htmlAttributes = new
                               {
                                   @type = "password",
                                   @name = "password",
                                   @id = "password",
                                   @placeholder = "Your Password * ",
                                   @class = "contact - input",
                                   @required = ""

                               }
                           })
                            </div>
                            <div class="input-field">
                                @Html.EditorFor(Model => Model.password, new
                               {
                                   htmlAttributes = new
                                   {
                                       @type = "password",
                                       @name = "cpassword",
                                       @id = "cpassword",
                                       @placeholder = "Confirm your password*",
                                       @class = "contact-input",
                                       @required = ""
                                   }
                               })
                            </div>
                            <div class="input-field">
                                @Html.EditorFor(Model => Model.email, new
                              {
                                  htmlAttributes = new
                                  {
                                      @type = "type",
                                      @name = "sword",
                                      @id = "cpassword",
                                      @placeholder = "Email*",
                                      @class = "contact-input",
                                      @required = ""
                                  }
                              })
                            </div>

                            <table>

                                <tr>
                                    <td>
