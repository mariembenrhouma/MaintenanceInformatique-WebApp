@{
    ViewBag.Title = "Index";
    Layout = "~/Views/mainten/_Layoutmainte.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Table V01</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="../images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../vendor/perfect-scrollbar/perfect-scrollbar.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../css/util.css">
	<link rel="stylesheet" type="text/css" href="../css/main.css">
	<!--===============================================================================================-->
</head>
<body>
	<header class="site-navbar bg-color site-navbar-target" role="banner">
		<div class="container">
			<div class="row align-items-center position-relative">

				<div class="col-3">
					<div class="site-logo">
						<a href="reparations.html" class="font-weight-bold">maintenance</a>
					</div>
				</div>

				<div class="col-9  text-right">


					<span class="d-inline-block d-lg-none"><a href="#" class="text-primary site-menu-toggle js-menu-toggle py-5"><span class="icon-menu h3 text-white"></span></a></span>


					<nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
						<ul class="site-menu main-menu js-clone-nav ml-auto ">
							<li><a href="gestion_equip.html" class="nav-link">equipements</a></li>
							<li class="active"><a href="reparations.html" class="nav-link">réparations</a></li>
							<li>|</li>
							<li><a href="#" class="nav-link">Login</a></li>
							<li><a href="#" class="nav-link">Registration</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</header>
	@using (Html.BeginForm("SaveRecord", "type_entretien", FormMethod.Post))
	{
	<div class="limiter">
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<table>
						<thead>
							<tr class="table100-head text-center">
								<th class="column11 text-center">Numéro</th>
								<th class="column22 text-center">Département</th>
								<th class="column33 text-center">Référence</th>
								<th class="column44 text-center">libelle</th>
								<th class="column55 text-center">Type</th>
								<th class="column66 text-center">type d'intervention</th>
								<th class="column77 text-center ">Durée</th>
								<th class="column88 text-center ">Etat</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in ViewBag.Message)
							{
							<tr class="colorback" id="colorback">
								<td class="column11 text-center">@item.Numéro</td>
								<td class="column22 text-center">@item.Département</td>
								<td class="column33 text-center">
									@item.Référence
								</td>
								<td class="column44 text-center"> @item.Libellé</td>
								<td class="column55 text-center">  @item.Type</td>
								<td class="column66 text-center">
									<select class="selection colorback">
										<option value="free">Hardware</option>
										<option value="starter">software</option>
									</select>
								</td>
								<td class="column77 text-center">
									@Html.ActionLink("Edit", "SaveRecord", "type_entretien"@*,new { id = item.Numéro })
									@item.nombreheureinter <label> min</label>
								</td>
								@using (Html.BeginForm("Ude", "type_entretien", FormMethod.Post))
								{
								<td class="column88 text-center" id="done">
									<svg xmlns="http://www.w3.org/2000/svg" id="done" width="18" height="18" fill="currentColor" class="add-icon bi bi-check2-circle" viewBox="0 0 16 16">
										<path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z" />
										<path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z" />
									</svg>
									<svg xmlns="http://www.w3.org/2000/svg" id="nodone" width="18" height="18" fill="currentColor" class="ml-3 del-icon bi bi-x-circle-fill" viewBox="0 0 16 16">
										<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
									</svg>
								</td>
								}
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	}
	<script src="../js/main.js"></script>
	<script>
		var nodone = document.getElementById('nodone');
		var done = document.getElementById('done');
		var colorback = document.getElementById('colorback');
		nodone.addEventListener('click', nodonemaintenance);
		done.addEventListener('click', donemaintenance);
		function nodonemaintenance() {
			colorback.style.backgroundColor = "rgba(227,43,43,0.42)";
			colorback.style.color = "white";
		}
		function donemaintenance() {
			colorback.style.backgroundColor = "rgba(43,227,86,0.47)";
			colorback.style.color = "black";
		}
	</script>



	<!--===============================================================================================-->
	<script src="../vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="../vendor/bootstrap/js/popper.js"></script>
	<script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="../vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="../js/main.js"></script>

</body>
</html>